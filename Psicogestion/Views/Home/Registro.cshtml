@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner superior -->
<section id="banner" class="banner">
    <div class="bg-color">
        <div class="container">
            <div class="row">
                <div class="banner-info text-center">
                    <div class="banner-text">
                        <h1 class="white">¡Unite al Portal Médico!</h1>
                        <p class="white">Completá el formulario para crear tu cuenta</p>
                        <a href="#form-register" class="btn btn-appoint">Ir al formulario</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Formulario de Registro -->
<section id="form-register" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Título centrado -->
            <div class="col-md-8 col-md-offset-2 text-center">
                <h2 class="service-title" style="margin-bottom: 25px;">Registro de Usuario</h2>
                <p class="sub-title" style="margin-bottom: 35px;">Ingresá tus datos para crear una cuenta</p>
            </div>

            <!-- Formulario centrado -->
            <div class="col-md-6 col-md-offset-3">
                <form method="post" action="@Url.Action("Register", "Account")" class="card-user">
                    <div class="form-group">
                        <label for="FullName">Nombre completo</label>
                        <input type="text" name="FullName" class="form-control br-radius-zero" id="FullName" placeholder="Tu nombre" required>
                    </div>

                    <div class="form-group">
                        <label for="Email">Correo electrónico</label>
                        <input type="email" name="Email" class="form-control br-radius-zero" id="Email" placeholder="ejemplo@correo.com" required>
                    </div>

                    <div class="form-group">
                        <label for="Password">Contraseña</label>
                        <input type="password" name="Password" class="form-control br-radius-zero" id="Password" placeholder="••••••••" required>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Confirmar contraseña</label>
                        <input type="password" name="ConfirmPassword" class="form-control br-radius-zero" id="ConfirmPassword" placeholder="••••••••" required>
                    </div>

                    <button type="submit" class="btn btn-form btn-block">Crear cuenta</button>

                    <hr>
                    <p class="text-center">¿Ya tenés cuenta? <a href="@Url.Action("Login", "Account")" class="site-link">Iniciar sesión</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
