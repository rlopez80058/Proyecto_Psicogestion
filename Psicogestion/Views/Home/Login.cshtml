@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner superior -->
<section id="banner" class="banner">
    <div class="bg-color">
        <div class="container">
            <div class="row">
                <div class="banner-info text-center">
                    <div class="banner-text">
                        <h1 class="white">Bienvenido</h1>
                        <p class="white">Iniciá sesión para acceder a tu espacio personalizado</p>
                        <a href="#form-login" class="btn btn-appoint">Ir al formulario</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Formulario de Login -->
<section id="form-login" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Título centrado -->
            <div class="col-md-8 col-md-offset-2 text-center">
                <h2 class="service-title" style="margin-bottom: 25px;">Acceso a su cuenta</h2>
                <p class="sub-title" style="margin-bottom: 35px;">Por favor ingrese sus credenciales para continuar</p>
            </div>

            <!-- Formulario centrado -->
            <div class="col-md-6 col-md-offset-3">
                <form method="post" action="@Url.Action("Login", "Account")" class="card-user">
                    <div class="form-group">
                        <label for="Email">Correo electrónico</label>
                        <input type="email" name="Email" class="form-control br-radius-zero" id="Email" placeholder="ejemplo@correo.com" required>
                    </div>

                    <div class="form-group">
                        <label for="Password">Contraseña</label>
                        <input type="password" name="Password" class="form-control br-radius-zero" id="Password" placeholder="••••••••" required>
                    </div>

                    <div class="form-group text-right">
                        <a href="#" class="site-link">¿Olvidó su contraseña?</a>
                    </div>

                    <button type="submit" class="btn btn-form btn-block">Ingresar</button>

                    <hr>
                    <p class="text-center">¿No tiene una cuenta? <a href="@Url.Action("Register", "Account")" class="site-link">Registrate</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
