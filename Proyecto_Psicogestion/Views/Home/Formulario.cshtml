@{
    ViewBag.Title = "Formulario de Evaluación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner de encabezado -->
<section id="banner" class="banner" style="min-height: 300px;">
    <div class="bg-color">
        <div class="container">
            <div class="row">
                <div class="banner-info text-center">
                    <div class="banner-text">
                        <h1 class="white">Formulario de Evaluación Clínica</h1>
                        <p class="white">Registrá la evolución, observaciones y seguimiento de cada paciente</p>
                        <a href="#form-evaluacion" class="btn btn-appoint">Ir al formulario</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Formulario -->
<section id="form-evaluacion" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Título centrado -->
            <div class="col-md-8 col-md-offset-2 text-center">
                <h2 class="service-title" style="margin-bottom: 25px;">Formulario de Evaluación</h2>
                <p class="sub-title" style="margin-bottom: 35px;">Completá los datos clínicos de la sesión con el paciente</p>
            </div>

            <!-- Formulario central -->
            <div class="col-md-6 col-md-offset-3">
                <form method="post" action="@Url.Action("GuardarFormulario", "Formulario")" class="card-user">
                    <div class="form-group">
                        <label for="Paciente">Nombre del paciente</label>
                        <input type="text" class="form-control br-radius-zero" id="Paciente" name="Paciente" placeholder="Ej: María López" required />
                    </div>

                    <div class="form-group">
                        <label for="FechaSesion">Fecha de la sesión</label>
                        <input type="date" class="form-control br-radius-zero" id="FechaSesion" name="FechaSesion" required />
                    </div>

                    <div class="form-group">
                        <label for="MotivoConsulta">Motivo de consulta</label>
                        <textarea class="form-control br-radius-zero" id="MotivoConsulta" name="MotivoConsulta" rows="3" required placeholder="Describí el motivo principal..."></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Observaciones">Observaciones</label>
                        <textarea class="form-control br-radius-zero" id="Observaciones" name="Observaciones" rows="4" placeholder="Comportamientos, lenguaje, actitud..." required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Diagnostico">Diagnóstico preliminar</label>
                        <textarea class="form-control br-radius-zero" id="Diagnostico" name="Diagnostico" rows="3" placeholder="Ej: Trastorno de ansiedad generalizada"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Recomendaciones">Recomendaciones o seguimiento</label>
                        <textarea class="form-control br-radius-zero" id="Recomendaciones" name="Recomendaciones" rows="3" placeholder="Ej: Continuar con sesiones semanales, ejercicios de respiración..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-form btn-block">Guardar Evaluación</button>
                </form>
            </div>
        </div>
    </div>
</section>
