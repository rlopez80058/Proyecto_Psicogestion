@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-5">
    <h2 class="mb-4">Módulo de Gestión de Usuarios</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3">
                <h5>Registro de Usuario</h5>
                <p>Formulario visual para ingresar nombre completo, correo y contraseña.</p>
                <a href="#" class="btn btn-primary">Crear Cuenta</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <h5>Inicio de Sesión</h5>
